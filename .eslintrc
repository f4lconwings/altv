{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "ignorePatterns": "dist/**/*",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "@typescript-eslint/consistent-type-imports": "error"
  }
}
